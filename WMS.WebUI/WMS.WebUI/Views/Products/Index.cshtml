@model List<WMS.WebUI.ViewModels.ProductViewModel>
@{
}

<div class="mb-2">
    <form asp-action="Index">
        <div class="d-flex justfiy-content-between gap-4">
            <div class="col-4">
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="Search..." name="searchString" value="@ViewBag.SearchString" />
                    <div class="input-group-append">
                        <button type="submit" class="btn btn-primary">
                            <i class="fa fa-search"></i> Search
                        </button>
                    </div>
                </div>
            </div>
            <div class="col-4">
                <a asp-action="Create" class="mb-4 float-right btn btn-outline-success">
                    New +
                </a>
            </div>
        </div>
    </form>
</div>

<div class="row">
    <div class="col-12">
        <ejs-grid id="categories-list"
                  dataSource="@Model"
                  gridLines="Vertical"
                  allowSorting="true">
            <e-grid-columns>
                <e-grid-column headerText="Id" field="Id" template="#idCellTemplate" typeof="Text"></e-grid-column>
                <e-grid-column headerText="Name" field="Name" typeof="Text"></e-grid-column>
                <e-grid-column headerText="Description" field="Description" typeof="Text"></e-grid-column>

            </e-grid-columns>
        </ejs-grid>
    </div>
</div>

<script id="idCellTemplate" type="text/template">
    <div>
        <a rel='nofollow' href="categories/details/${Id}">${Id}</a>
    </div>
</script>