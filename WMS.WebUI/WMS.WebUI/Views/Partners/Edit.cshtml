@model WMS.WebUI.ViewModels.PartnerViewModels.EditPartnerViewModel

<div class="row m-5">
    <form id="partner-form" class="d-flex flex-column gap-4" asp-action="Edit">
        <h3 class="text-center">Edit Partner</h3>

        <div class="form-group d-flex gap-5">
            <ejs-textbox id="first-name" name="FirstName" value="@Model.FirstName" placeholder="First Name" width="50%"></ejs-textbox>
            <ejs-textbox id="last-name" name="LastName" value="@Model.LastName" placeholder="Last Name" width="50%"></ejs-textbox>
        </div>

        <div class="form-group d-flex gap-5">
            <ejs-textbox id="phone-number" name="PhoneNumber" value="@Model.PhoneNumber" placeholder="Phone Number" width="50%"></ejs-textbox>
            <ejs-numerictextbox id="balance" name="Balance" value="@Model.Balance" placeholder="Balance" width="50%"></ejs-numerictextbox>
        </div>

        <div class="form-group d-flex gap-5">
            <ejs-combobox id="partner-type"
                          dataSource="@ViewBag.PartnerTypes"
                          value="@Model.Type"
                          placeholder="Select Partner Type"
                          width="50%"
                          name="Type">
                <e-combobox-fields value="Id" text="Name"></e-combobox-fields>
            </ejs-combobox>
        </div>

        <ejs-button id="submit" content="Submit" class="btn-success"></ejs-button>
    </form>
</div>
