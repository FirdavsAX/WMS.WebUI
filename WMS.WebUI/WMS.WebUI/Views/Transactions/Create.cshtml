@model WMS.WebUI.ViewModels.TransactionView

<div class="row m-5">
    <form id="product-form" class="d-flex flex-column gap-4" asp-action="Create">
        <h3 class="text-center">Create Product</h3>
        <div class="form-group d-flex gap-5">
            <ejs-combobox id="types"
                          dataSource="@ViewBag.Types"
                          value="@ViewBag.SelectedType"
                          placeholder="Select Type"
                          name="TransactionType"
                          floatLabelType="Auto"
                          width="50%">
            </ejs-combobox>
            <ejs-combobox id="partners"
                          dataSource="@ViewBag.Partners"
                          value="@ViewBag.SelectedPartnerId"
                          placeholder="Select Partner"
                          name="PartnerId"
                          floatLabelType="Auto"
                          width="50%">
                <e-combobox-fields value="Id" text="FullName"></e-combobox-fields>
            </ejs-combobox>
        </div>
        <div class="form-group d-flex gap-5">
            <ejs-combobox id="products"
                          dataSource="@ViewBag.Products"
                          placeholder="Select Product"
                          name="Products"
                          floatLabelType="Auto"
                          width="50%">
                <e-combobox-fields value="Id" text="Name"></e-combobox-fields>
            </ejs-combobox>
            <ejs-button id="addProduct" content="Add" width="50%"></ejs-button>
        </div>
        <div class="form-group d-flex gap-5">
            <ejs-grid id="itemsList"
                      dataSource="@ViewBag.TransactionItems"
                      gridLines="Vertical"
                      allowSorting="true">
                <e-grid-columns>
                    <e-grid-column headerText="Id" field="Id" typeof="Text"></e-grid-column>
                    <e-grid-column headerText="Name" field="Name" typeof="Text"></e-grid-column>
                    <e-grid-column headerText="Price" field="UnitPrice" typeof="Text" format="c2"></e-grid-column>
                    <e-grid-column headerText="Quantity" field="Quantity" typeof="Number"></e-grid-column>
                </e-grid-columns>
            </ejs-grid>
        </div>

        <ejs-button id="submit" content="Submit" class="btn-success"></ejs-button>
    </form>
</div>