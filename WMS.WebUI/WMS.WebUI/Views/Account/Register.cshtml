@model WMS.WebUI.ViewModels.Auth.RegisterViewModel

@{
	ViewData["Title"] = "Login";
	Layout = "~/Views/Shared/_LoginPageLayout.cshtml";
}

<div class="container">
	<div class="row d-flex justify-content-center mt-5">
		<div class="col-12 col-md-8 col-lg-6 col-xl-5">
			<div class="card py-3 px-2">
				<h4 class="text-center mb-3 mt-3">Register</h4>
				<div class="row mx-auto d-flex justify-content-between gap-4 mt-3 mb-3">
					<div class="col-4 social-link">
						<i class="fa-brands fa-twitter"></i>
					</div>
					<div class="col-4 social-link">
						<i class="fa-brands fa-google"></i>
					</div>
					<div class="col-4 social-link">
						<i class="fa-brands fa-linkedin"></i>
					</div>
				</div>
				<form class="login-form mt-3" method="post" asp-action="Register">
					<div class="d-flex gap-3">
						<div class="form-group">
							<input asp-for="FirstName" type="text" class="form-control" placeholder="First name">
						</div>
						<div class="form-group">
							<input asp-for="LastName" type="text" class="form-control" placeholder="Last name">
						</div>
					</div>
					<div class="form-group">
						<input asp-for="Email" type="email" class="form-control" placeholder="Email">
					</div>
					<div class="form-group">
						<input asp-for="Password" type="password" class="form-control" placeholder="Password">
					</div>
					<div class="form-group">
						<input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm Password">
					</div>
					<div class="d-flex row">
						<div class="form-group mt-3 p-2">
							<button type="submit" class="btn btn-block btn-primary w-100">
								Register
							</button>
						</div>
						<div class="form-group mt-2 p-2">
							<a asp-action="Login" class="btn btn-block btn-primary w-100">
								Login
							</a>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}
